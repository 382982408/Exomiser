<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-flyway:migrate</actionName>
            <displayName>flyway:migrate</displayName>
            <goals>
                <goal>compile</goal>
                <goal>flyway:migrate</goal>
                
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-flyway:repair</actionName>
            <displayName>flyway:repair</displayName>
            <goals>
                <goal>compile</goal>
                <goal>flyway:repair</goal>
            </goals>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xms11g -Xmx12g -classpath %classpath de.charite.compbio.exomiser.db.Main</exec.args>
                <exec.executable>java</exec.executable>
                <exec.classpathScope>runtime</exec.classpathScope>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xms11g -Xmx12g -classpath %classpath de.charite.compbio.exomiser.db.Main</exec.args>
                <exec.executable>java</exec.executable>
                <exec.classpathScope>runtime</exec.classpathScope>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -Xms11g -Xmx12g -classpath %classpath de.charite.compbio.exomiser.db.Main</exec.args>
                <exec.executable>${profiler.java}</exec.executable>
                <profiler.action>profile</profiler.action>
            </properties>
        </action>
    </actions>
